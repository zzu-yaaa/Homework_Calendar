<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InfoFragment"
    android:id="@+id/info_fragment"
    android:background="@color/white"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <View
            android:id="@+id/info_box1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/info_box"
            android:layout_marginTop="105dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/info_linearlayout"/>

        <View
            android:id="@+id/info_box2"
            android:layout_width="330dp"
            android:layout_height="130dp"
            android:background="@drawable/info_box2"
            app:layout_constraintLeft_toLeftOf="@id/info_box1"
            app:layout_constraintRight_toRightOf="@id/info_box1"
            app:layout_constraintTop_toTopOf="@id/info_box1"
            app:layout_constraintBottom_toBottomOf="@id/info_box1"/>

        <ImageView
            android:id="@+id/info_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:src="@drawable/info"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@+id/key_name"
            app:layout_constraintLeft_toLeftOf="@+id/info_box2"
            app:layout_constraintBottom_toBottomOf="@id/info_box2"
            app:layout_constraintTop_toTopOf="@id/info_box1"/>

        <TextView
            android:id="@+id/key_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김가천"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/info_img"
            app:layout_constraintBottom_toBottomOf="@id/info_box2"
            app:layout_constraintRight_toRightOf="@id/info_box2"
            app:layout_constraintTop_toTopOf="@id/info_box2"
            android:layout_marginRight="100dp"
            />

        <LinearLayout
            android:id="@+id/info_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_box1">



            <TextView
                android:id="@+id/key_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201935094"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="55dp"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/key_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소프트웨어학과"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="55dp"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/key_subjects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="과목"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="55dp"
                android:textSize="20sp"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="50dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/back"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>






</FrameLayout>